{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "zig build-exe",
      "type": "process",
      "command": "zig",
      "args": ["build", "-freference-trace", "run"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": "$zig"
    },
    {
      "label": "zig run",
      "type": "process",
      "command": "zig",
      "args": ["run", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "zig test",
      "type": "process",
      "command": "zig",
      "args": ["test", "${file}"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
